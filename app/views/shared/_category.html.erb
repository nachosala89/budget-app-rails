<%= link_to category_path(category.id) do %>
  <article class="row d-flex">
    <div class="col-3">
      <img src=<%= category.icon %> alt="Category Icon" class="m-1 img-fluid rounded-1">
    </div>
    <div class="col-6">
      <p><%= category.name %></p>
      <p><%= category.created_at %></p>
    </div>
    <div class="col-3">
      <span>$<%= category.amount %></span>
    </div>
  </article>
<% end %>